<%= provide(:title, "Test Histories") %>
<main class="v-layout-content flex-shrink-0 ant-layout-content">
   <div class="ant-row">
      <div class="ant-col v-layout-container ant-col-xs-24 ant-col-lg-24">
         <section class="detail-banner relative small-banner" style="background: url(&quot;/assets/banner-course-detail.png&quot;);">
            <div class="detail-banner__main detail-banner__breadcrumb">
               <div class="py-3 ant-breadcrumb"><span><span class="ant-breadcrumb-link"><%= link_to "Home", root_path %></span><span class="ant-breadcrumb-separator">&gt;</span></span><span><span class="ant-breadcrumb-link"><%= link_to "Tests", exams_path %></span><span class="ant-breadcrumb-separator">&gt;</span></span></div>
            </div>
            <div class="enrolled-courses v-layout-center my-8">
               <div class="enrolled-courses__page">
                  <p class="enrolled-courses__page__title text-white vs:text-3xl ls:text-5xl">Your private profile</p>
               </div>
            </div>
         </section>
         <section class="onetwo-layout ">
            <div class="cross-bar ">
               <div class="ant-row v-layout-center">
                  <div class="ant-col ant-col-8 vs:hidden xl:block pr-2"></div>
                  <div vs="24" class="ant-col flex items-center xl:pl-8 ant-col-xl-16">
                     <div></div>
                  </div>
               </div>
            </div>
            <div class="cross-bar ">
               <div class="ant-row v-layout-center">
                  <div class="ant-col ant-col-8 vs:hidden xl:block pr-2"></div>
                  <div vs="24" class="ant-col flex items-center xl:pl-8 ant-col-xl-16">
                     <div class="profile-menu overflow-x-auto overflow-y-hidden">
                        <ul class="menu-tab">
                           <li class="tab-active"><a href="/users/chiennt/tests">Tests</a></li>
                        </ul>
                     </div>
                  </div>
               </div>
            </div>
            <div class="v-layout-center mb-8">
               <div class="ant-row">
                  <div class="ant-col ant-col-8 left-col vs:hidden xl:block">
                     <div class="vs:hidden xl:block">
                        <div class="profile-content">
                           <div class="flex justify-center pt-16"><img class="v-avatar cursor-pointer" src="https://images.viblo.asia/240/03d3db71-0e38-4090-8d36-5a293591764e.png" srcset="https://images.viblo.asia/480/03d3db71-0e38-4090-8d36-5a293591764e.png 2x" alt="chiennt" style="width: 240px; height: 240px;"></div>
                           <div class="profile-content__info mt-8 text-center">
                              <h1 class="name">chiennt</h1>
                              <p class="email mt-4">
                                 <i aria-label="icon: mail" class="anticon anticon-mail mr-2">
                                    <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="mail" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                       <path d="M928 160H96c-17.7 0-32 14.3-32 32v640c0 17.7 14.3 32 32 32h832c17.7 0 32-14.3 32-32V192c0-17.7-14.3-32-32-32zm-40 110.8V792H136V270.8l-27.6-21.5 39.3-50.5 42.8 33.3h643.1l42.8-33.3 39.3 50.5-27.7 21.5zM833.6 232L512 482 190.4 232l-42.8-33.3-39.3 50.5 27.6 21.5 341.6 265.6a55.99 55.99 0 0 0 68.7 0L888 270.8l27.6-21.5-39.3-50.5-42.7 33.2z"></path>
                                    </svg>
                                 </i>
                              </p>
                              <div class="flex justify-center mt-6">
                                <%= link_to edit_user_registration_path do%>
                                    <button type="button" class="v-button v-button-primary v-button-small  v-button-ghost " style="width: 240px;">Edit Profile</button>
                                <% end %>
                              </div>
                           </div>
                        </div>
                        <div class="profile-content pb-0">
                           <div class="ant-row my-6 mx-10" style="margin: -8px;">
                              <div class="ant-col ant-col-8 certificate-image" style="padding: 8px;"><img class="medal-image cursor-pointer" src="https://learn.viblo.asia/uploads/d/9/d9228b5c-f3ca-4a33-b53a-529c96a6e8b6.png" alt=""></div>
                              <div class="ant-col ant-col-8 certificate-image" style="padding: 8px;"><img class="medal-image cursor-pointer" src="https://learn.viblo.asia/uploads/6/d/6d88eaa0-3bae-41cd-a6fb-e59dfd27fffb.png" alt=""></div>
                              <div class="ant-col ant-col-8 certificate-image" style="padding: 8px;"><img class="medal-image cursor-pointer" src="https://learn.viblo.asia/uploads/1/e/1ee3262d-be48-4b5b-a766-9392a4d1a3c2.png" alt=""></div>
                           </div>
                        </div>
                     </div>
                     <div class="vs:block xl:hidden">
                        <div class="mobile-button-show fixed flex justify-center items-center">
                           <i aria-label="icon: user" class="anticon anticon-user">
                              <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="user" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                 <path d="M858.5 763.6a374 374 0 0 0-80.6-119.5 375.63 375.63 0 0 0-119.5-80.6c-.4-.2-.8-.3-1.2-.5C719.5 518 760 444.7 760 362c0-137-111-248-248-248S264 225 264 362c0 82.7 40.5 156 102.8 201.1-.4.2-.8.3-1.2.5-44.8 18.9-85 46-119.5 80.6a375.63 375.63 0 0 0-80.6 119.5A371.7 371.7 0 0 0 136 901.8a8 8 0 0 0 8 8.2h60c4.4 0 7.9-3.5 8-7.8 2-77.2 33-149.5 87.8-204.3 56.7-56.7 132-87.9 212.2-87.9s155.5 31.2 212.2 87.9C779 752.7 810 825 812 902.2c.1 4.4 3.6 7.8 8 7.8h60a8 8 0 0 0 8-8.2c-1-47.8-10.9-94.3-29.5-138.2zM512 534c-45.9 0-89.1-17.9-121.6-50.4S340 407.9 340 362c0-45.9 17.9-89.1 50.4-121.6S466.1 190 512 190s89.1 17.9 121.6 50.4S684 316.1 684 362c0 45.9-17.9 89.1-50.4 121.6S557.9 534 512 534z"></path>
                              </svg>
                           </i>
                        </div>
                     </div>
                  </div>
                  <div vs="24" class="ant-col right-content vs:pl-0 xl:pl-8 ant-col-xl-16">
                     <div class="mt-8">
                        <div class="sort-bar flex items-center mb-8">
                           <div class="flex justify-between">
                              <div class="sort-bar__page">
                                 <div class="results flex-1">Showing <span class="bold text-black">1-<%= @exams.count %></span> of <span class="bold text-black"><%= @pagy.count %></span> results</div>
                              </div>
                           </div>
                        </div>
                        <div class="ant-table-wrapper test-lists">
                           <div class="ant-spin-nested-loading">
                              <div class="ant-spin-container">
                                 <div class="ant-table ant-table-default ant-table-scroll-position-left ant-table-layout-fixed">
                                    <div class="ant-table-content">
                                       <div class="ant-table-scroll">
                                          <div tabindex="-1" class="ant-table-body" style="overflow-x: scroll;">
                                             <table class="ant-table-fixed" style="width: 800px;">
                                                <colgroup>
                                                   <col style="width: 30%; min-width: 30%;">
                                                   <col style="width: 15%; min-width: 15%;">
                                                   <col style="width: 15%; min-width: 15%;">
                                                   <col style="width: 20%; min-width: 20%;">
                                                   <col style="width: 15%; min-width: 15%;">
                                                   <col style="width: 10%; min-width: 10%;">
                                                </colgroup>
                                                <thead class="ant-table-thead">
                                                   <tr>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Exam</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Mode</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Result</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Language</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Start time</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                      <th class="ant-table-row-cell-break-word">
                                                         <span class="ant-table-header-column">
                                                            <div><span class="ant-table-column-title">Detail</span><span class="ant-table-column-sorter"></span></div>
                                                         </span>
                                                      </th>
                                                   </tr>
                                                </thead>
                                                <tbody class="ant-table-tbody">
                                                <% if @exams.any? %>
                                                <% @exams.each do |exam| %>
                                                   <tr class="ant-table-row ant-table-row-level-0">
                                                      <td class="ant-table-row-cell-break-word">
                                                         <div class="exam-title cursor-pointer">
                                                            <p class="title"><%= link_to exam.course.course_name, course_path(exam.course_id) %></p>
                                                            <p class="desc mt-1">•beginning level</p>
                                                         </div>
                                                      </td>
                                                      <td class="ant-table-row-cell-break-word">
                                                         <div class="exam-title">
                                                            <p class="title">Exam</p>
                                                         </div>
                                                      </td>
                                                      <td class="ant-table-row-cell-break-word">
                                                         <div class="exam-result">
                                                            <% if exam.answers.where(is_correct: true).count >= 5 %>
                                                               <p class="result"><span class="result-passed">passed</span></p>
                                                            <% else %>
                                                               <p class="result"><span class="result-failed">failed</span></p>
                                                            <% end %>
                                                            <p class="detail mt-1"><%= exam.answers.where(is_correct: true).count %>/<%= exam.course.questions.count %> questions</p>
                                                         </div>
                                                      </td>
                                                      <td class="ant-table-row-cell-break-word">
                                                         <div class="exam-title">
                                                            <p class="title uppercase">en</p>
                                                            <p class="desc mt-1">Language testing</p>
                                                         </div>
                                                      </td>
                                                      <td class="ant-table-row-cell-break-word">
                                                         <div class="exam-title">
                                                            <p class="title"><time datetime="1618208096000"><%= exam.created_at.to_date %></time></p>
                                                            <p class="desc mt-1"><time datetime="1618208096000"><%= exam.created_at.strftime("%I:%M%p") %></time></p>
                                                         </div>
                                                      </td>
                                                      <td class="ant-table-row-cell-break-word">
                                                      <%= link_to course_exam_path(course_id: exam.course,id: exam) do %>
                                                         <div class="exam-detail rounded-full h-8 w-8 flex items-center justify-center">
                                                            <i aria-label="icon: eye" tabindex="-1" class="anticon anticon-eye">
                                                               <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                                                  <path d="M396 512a112 112 0 1 0 224 0 112 112 0 1 0-224 0zm546.2-25.8C847.4 286.5 704.1 186 512 186c-192.2 0-335.4 100.5-430.2 300.3a60.3 60.3 0 0 0 0 51.5C176.6 737.5 319.9 838 512 838c192.2 0 335.4-100.5 430.2-300.3 7.7-16.2 7.7-35 0-51.5zM508 688c-97.2 0-176-78.8-176-176s78.8-176 176-176 176 78.8 176 176-78.8 176-176 176z"></path>
                                                               </svg>
                                                            </i>
                                                         </div>
                                                      <% end %>
                                                      </td>
                                                   </tr>
                                                <% end %>
                                                <% else %>
                                                    <span>No data</span>
                                                <% end %>
                                                </tbody>
                                             </table>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="paginate">
                            <% if @pagy.present?%>
                                <%== pagy_bootstrap_nav(@pagy) %>
                            <% end %>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </section>
      </div>
   </div>
</main>