<% provide(:title, "Courses Page") %>
<main class="v-layout-content flex-shrink-0 ant-layout-content">
    <section class="detail-banner relative small-banner" style="background:url(&quot;/assets/banner-course-detail.png&quot;);min-height:">
        <div class="detail-banner__main detail-banner__breadcrumb">
            <div class="py-3 ant-breadcrumb"><span><span class="ant-breadcrumb-link"><%= link_to "Home", root_path %></span><span class="ant-breadcrumb-separator">&gt;</span></span><span><span class="ant-breadcrumb-link"><%= link_to "List Courses", courses_path %></span><span class="ant-breadcrumb-separator">&gt;</span></span></div>
        </div>
        <div class="course-main v-layout-center pt-5">
            <div class="course-main__content mb-8">
                <p class="course-main__content__name text-white">All Courses</p>
            </div>
        </div>
    </section>
    <section class="onetwo-layout certificates">
        <div class="cross-bar ">
            <div class="ant-row v-layout-center">
                <div class="ant-col ant-col-8 vs:hidden xl:block pr-2"></div>
                <div vs="24" class="ant-col flex items-center xl:pl-8 ant-col-xl-16">
                    <ul class="menu-tab menu-tab-desktop">
                        <li class="tab-active"><%= link_to "All Courses", courses_path %></li>
                    </ul>
                    <div class="menu-tab-mobile">
                        <ul class="ant-menu ant-menu-light ant-menu-root ant-menu-horizontal" role="menu">
                            <li class="ant-menu-submenu ant-menu-submenu-horizontal ant-menu-overflowed-submenu" style="display:none" role="menuitem">
                                <div class="ant-menu-submenu-title" aria-expanded="false" aria-haspopup="true"><span>···</span><i class="ant-menu-submenu-arrow"></i></div>
                            </li>
                            <li class="ant-menu-item ant-menu-item-selected" role="menuitem"><a href="/courses?type=all">All Courses</a></li>
                            <li class="ant-menu-submenu ant-menu-submenu-horizontal ant-menu-overflowed-submenu" style="display:none" role="menuitem">
                                <div class="ant-menu-submenu-title" aria-expanded="false" aria-haspopup="true"><span>···</span><i class="ant-menu-submenu-arrow"></i></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="cross-bar ">
            <div class="ant-row v-layout-center">
                <div class="ant-col ant-col-8 vs:hidden xl:block pr-2"></div>
                <div vs="24" class="ant-col flex items-center xl:pl-8 ant-col-xl-16">
                    <div class="flex justify-between w-full">
                        <div class="certificates__page">
                            <div class="results flex-1">
                                <% if @courses.present?%>
                                Showing <span><b><%= params[:course].present? ? '"' + params[:course] + '"' : params[:category] ? '"' + Category.find(params[:category]).category_name + '"' : nil %></b></span>
                                <!-- -->
                                <span class="bold text-black">
                                    1
                                    <!-- -->-
                                    <!-- --><%= @courses.count %>
                                </span>
                                <!-- -->of
                                <!-- --> <span class="bold text-black"><%= @courses.count %></span> <!-- -->results
                                <% else %>
                                    <span>No data</span>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="v-layout-center mb-8">
            <div class="ant-row">
                <div class="ant-col ant-col-8 left-col vs:hidden xl:block">
                    <div class="certificates__tags p-6">
                    <form action="/courses">
                        <div class="search">
                            <span class="ant-input-search ant-input-affix-wrapper">
                                <%= text_field_tag (:course), "", placeholder: "Enter keyword...", class: "ant-input", icon: "search" %>
                                <span class="ant-input-suffix">
                                    <i aria-label="icon: search" tabindex="-1" class="anticon anticon-search ant-input-search-icon">
                                        <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="search" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                            <path d="M909.6 854.5L649.9 594.8C690.2 542.7 712 479 712 412c0-80.2-31.3-155.4-87.9-212.1-56.6-56.7-132-87.9-212.1-87.9s-155.5 31.3-212.1 87.9C143.2 256.5 112 331.8 112 412c0 80.1 31.3 155.5 87.9 212.1C256.5 680.8 331.8 712 412 712c67 0 130.6-21.8 182.7-62l259.7 259.6a8.2 8.2 0 0 0 11.6 0l43.6-43.5a8.2 8.2 0 0 0 0-11.6zM570.4 570.4C528 612.7 471.8 636 412 636s-116-23.3-158.4-65.6C211.3 528 188 471.8 188 412s23.3-116.1 65.6-158.4C296 211.3 352.2 188 412 188s116.1 23.2 158.4 65.6S636 352.2 636 412s-23.3 116.1-65.6 158.4z"></path>
                                        </svg>
                                    </i>
                                </span>
                            </span>
                        </div>
                    </form>

                    <div class="tags pt-6"><span class="ant-tag m-1 ">Linux</span><span class="ant-tag m-1 ">LPIC</span><span class="ant-tag m-1 ">CCNP</span><span class="ant-tag m-1 ">CCNA</span><span class="ant-tag m-1 ">Ruby</span><span class="ant-tag m-1 ">ISTQB</span><span class="ant-tag m-1 ">AWS</span><span class="ant-tag m-1 ">FE</span><span class="ant-tag m-1 ">Laravel</span><span class="ant-tag m-1 ">Kubernetes</span></div>
                    </div>
                    <div class="certificates__categories p-6">
                        <div class="title">
                            <p>Categories</p>
                        </div>
                        <div class="list mt-6 pt-4">
                            <div class="ant-row ant-form-item">
                                <div class="ant-col ant-form-item-control-wrapper">
                                    <div class="ant-form-item-control has-success">
                                        <span class="ant-form-item-children">
                                            <div class="ant-checkbox-group" id="filter_form_categories" data-__meta="[object Object]" data-__field="[object Object]">
                                                <% Category.all.each do |category| %>
                                                <label class="ant-checkbox-group-item ant-checkbox-wrapper">
                                                    <span class="ant-checkbox"><input type="checkbox" class="ant-checkbox-input" value="Google Cloud Platform (GCP)" /></span><%= link_to category.category_name, courses_path(category: category.id) %>
                                                </label>
                                                <% end %>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div vs="24" class="ant-col right-content vs:pl-0 xl:pl-8 ant-col-xl-16">
                    <div class="vs:pr-0 xl:pr-0">
                        <% if @courses.any? %>
                        <% @courses.each do |course| %>
                        <div class="certificates__item lg:flex vs:block mt-10">
                            <img class="course-image cursor-pointer" src="https://learn.viblo.asia/uploads/0/7/07ad167c-6e9e-4a9d-97e7-4bc294b59be1.png" alt="" />
                            <div class="body pl-6 pb-4 xlExtra:pr-8">
                                <div class="absolute right-0 bottom-0"></div>
                                <div class="title">
                                    <div class="flex justify-between">
                                        <p class="cursor-pointer pt-4 pr-4"><%= link_to course.course_name, course_path(course) %></p>
                                    </div>
                                </div>
                                <div class="info mt-5 mr-5">
                                    <div class="ant-row flex items-center">
                                        <div class="ant-col ant-col-xs-6 ant-col-sm-6 ant-col-lg-3">
                                            <div class="updated mx-4">
                                                <div class="flex"><img src="/assets/users.svg" alt="" class="mr-2" />4</div>
                                            </div>
                                        </div>
                                        <div class="ant-col ant-col-xs-12 ant-col-sm-12 ant-col-lg-8">
                                            <div class="updated mx-4 justify-center">
                                                <div class="flex">
                                                    <i aria-label="icon: calendar" class="anticon anticon-calendar">
                                                        <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="calendar" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                                            <path d="M880 184H712v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H384v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H144c-17.7 0-32 14.3-32 32v664c0 17.7 14.3 32 32 32h736c17.7 0 32-14.3 32-32V216c0-17.7-14.3-32-32-32zm-40 656H184V460h656v380zM184 392V256h128v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h256v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h128v136H184z"></path>
                                                        </svg>
                                                    </i>
                                                    <%= course.created_at.to_date %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="ant-col ant-col-xs-6 ant-col-sm-6 ant-col-lg-3">
                                            <div class="updated mx-4">
                                                <div class="flex">
                                                    <i aria-label="icon: eye" class="anticon anticon-eye">
                                                        <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                                            <path d="M942.2 486.2C847.4 286.5 704.1 186 512 186c-192.2 0-335.4 100.5-430.2 300.3a60.3 60.3 0 0 0 0 51.5C176.6 737.5 319.9 838 512 838c192.2 0 335.4-100.5 430.2-300.3 7.7-16.2 7.7-35 0-51.5zM512 766c-161.3 0-279.4-81.8-362.7-254C232.6 339.8 350.7 258 512 258c161.3 0 279.4 81.8 362.7 254C791.5 684.2 673.4 766 512 766zm-4-430c-97.2 0-176 78.8-176 176s78.8 176 176 176 176-78.8 176-176-78.8-176-176-176zm0 288c-61.9 0-112-50.1-112-112s50.1-112 112-112 112 50.1 112 112-50.1 112-112 112z"></path>
                                                        </svg>
                                                    </i>
                                                    44
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% end %>
                        <% end %>

                        <div class="flex justify-center my-8">
                            <div class="paginate">
                                <% if @pagy.present?%>
                                    <%== pagy_bootstrap_nav(@pagy) %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="certificates">
        <div class="only-mobile btn-filter justify-center vs:block xl:hidden">
            <span role="img" aria-label="filter" class="anticon anticon-filter">
                <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="filter" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                    <path d="M880.1 154H143.9c-24.5 0-39.8 26.7-27.5 48L349 597.4V838c0 17.7 14.2 32 31.8 32h262.4c17.6 0 31.8-14.3 31.8-32V597.4L907.7 202c12.2-21.3-3.1-48-27.6-48zM603.4 798H420.6V642h182.9v156zm9.6-236.6l-9.5 16.6h-183l-9.5-16.6L212.7 226h598.6L613 561.4z"></path>
                </svg>
            </span>
        </div>
    </div>
</main>
<div class="flex-shrink-0">
    <div class="v-layout-learning-path flex flex-col items-center justify-center">
        <img class="v-logo" src="/assets/logo.svg" alt="Viblo Learning Logo" />
        <div class="text">Don’t know where to start?</div>
        <div class="description">You can see the roadmap as our reference for your career path below</div>
        <a href="/roadmaps"><button type="button" class="capitalize v-button v-button-primary v-button-large  " style="width:auto">Get a learning path here</button></a>
        <div class="v-layout-learning-path__top-left flex"><img src="/assets/polygon-learning-path-orange.svg" alt="" /><img class="polygon-small-red" src="/assets/polygon-learning-path-red.svg" alt="" /></div>
        <div class="v-layout-learning-path__bottom-right"></div>
    </div>
</div>